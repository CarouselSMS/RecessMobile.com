!!!
%html
  %head
    %title= @page_title ? "#{@page_title} | Recess Mobile, Inc." : "Recess Mobile, Inc."
    %meta{:content => 'en', :name => 'lang'}
    - unless RAILS_ENV == "production"
      %meta{ "name" => "ROBOTS", "content" => "NOINDEX, NOFOLLOW" }
    %meta{:content => 'We design, develop, deploy, and maintain well built SMS and mobile applications.', :name => 'description'}
    %meta{:content => 'recess mobile, text message, sms, applications, products, development, integration', :name => 'keywords'}
    %meta{:content => 'Recess Mobile, Inc.', :name => 'author'}   
    %link{:rel => "shortcut icon", :href => "/images/favicon.ico" }     
    = stylesheet_link_tag 'compiled/screen'
    = javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js', 'jq.init', 'jquery.cycle.all.min', 'jquery.lightbox-0.5.min', 'jquery.localscroll-1.2.7-min', 'jquery.scrollTo-1.4.1-min'   
    = csrf_meta_tag
  %body{ :class => "#{@group} #{controller_name} #{action_name}"}
    #content{ :class => content}
      = render :partial => 'partials/header'
      = yield
      = render :partial => 'partials/footer'

      :javascript
        var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
        document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));

      :javascript
        try {
        var pageTracker = _gat._getTracker("UA-8317106-3");
        pageTracker._trackPageview();
        } catch(err) {}
